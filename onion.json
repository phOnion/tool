{
    "name": "onion/tool",
    "version": "0.0.0",
    "links": [
        {
            "title": "Homepage",
            "href": "https://example.com",
            "lang": "en"
        },
        {
            "title": "YouTube",
            "href": "https://youtube.com/",
            "lang": "en"
        }
    ],
    "index": [
        {"type":"cli", "file": "bin/cli.php"},
        {"type":"web", "file": "public/index.php"}
    ],
    "commands": [
        {
            "definition": "version",
            "handler": "\\App\\Version\\Command",
            "summary": "Display Current version"
        },
        {
            "definition": "init",
            "handler": "\\App\\Initialize\\Command",
            "summary": "Initialize onion project"
        },
        {
            "definition": "add [type]",
            "handler": "\\App\\Add\\Command",
            "summary": "Add a component to the onion manifest",
            "parameters": [
                {
                    "name": "--dry",
                    "type": "bool",
                    "required": false,
                    "description": "Whether or not to run the command in dry mode"
                }
            ]
        },
        {
            "definition": "build",
            "handler": "\\App\\Build\\Command",
            "summary": "Build the current package",
            "parameters": [
                {
                    "name": "--filename | -f",
                    "type": "string",
                    "required": false,
                    "description": "The filename with with which to save the built package",
                    "default": "<vendor_package>"
                },
                {
                    "name": "--location | --dir",
                    "type": "string",
                    "required": false,
                    "description": "Directory in which to put the build artifact"
                },
                {
                    "name": "--bump",
                    "type": "string",
                    "required": false,
                    "description": "Define which part of the package version to bump: `major`, `minor` or `fix`"
                },
                {
                    "name": "--compression",
                    "type": "string",
                    "required": false,
                    "description": "Type of compression to use, either `gz`, `bz` or `none`",
                    "default": "none"
                },
                {
                    "name": "--signature",
                    "type": "string",
                    "required": false,
                    "description": "Signature algo to use for the generated file.",
                    "default": "sha512"
                },
                {
                    "name": "--version",
                    "type": "string",
                    "required": false,
                    "description": "Set a custom version of the build package"
                }
            ]
        }
    ]
}
