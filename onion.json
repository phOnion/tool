{
    "name": "onion/tool",
    "version": "0.4.0-alpha+0233",
    "links": [
        {
            "title": "GitHub",
            "href": "https://github.com/phOnion/tool",
            "lang": ""
        }
    ],
    "commands": [
        {
            "definition": "version",
            "handler": "\\Onion\\Tool\\Version\\Command",
            "summary": "Display Current version"
        },
        {
            "definition": "update",
            "handler": "\\Onion\\Tool\\Update\\Command",
            "summary": "Display Current version",
            "parameters": [
                {
                    "name": "--rollback",
                    "type": "bool",
                    "required": false,
                    "description": "Perform a rollback"
                },
                {
                    "name": "--force",
                    "type": "bool",
                    "required": false,
                    "description": "Force update to latest dev version"
                }
            ]
        },
        {
            "definition": "init",
            "handler": "\\Onion\\Tool\\Initialize\\Command",
            "summary": "Initialize onion project"
        },
        {
            "definition": "build",
            "handler": "\\Onion\\Tool\\Build\\Command",
            "summary": "Build the current package",
            "parameters": [
                {
                    "name": "--filename | -f",
                    "type": "string",
                    "required": false,
                    "description": "The filename with with which to save the built package",
                    "default": "<vendor_package>"
                },
                {
                    "name": "--location | --dir",
                    "type": "string",
                    "required": false,
                    "description": "Directory in which to put the build artifact"
                },
                {
                    "name": "--bump",
                    "type": "string",
                    "required": false,
                    "description": "Define which part of the package version to bump: `major`, `minor` or `fix`"
                },
                {
                    "name": "--compression | -c",
                    "type": "string",
                    "required": false,
                    "description": "Type of compression to use, either `gz`, `bz` or `none`",
                    "default": "none"
                },
                {
                    "name": "--signature | -s",
                    "type": "string",
                    "required": false,
                    "description": "Signature algo to use for the generated file.",
                    "default": "sha256"
                },
                {
                    "name": "--pre",
                    "type": "string",
                    "required": false,
                    "description": "Indicate this build is pre-release"
                },
                {
                    "name": "--standalone",
                    "type": "bool",
                    "required": false,
                    "description": "Setup the package to be included in other packages or as standalone application"
                }
            ]
        },
        {
            "definition": "publish [artefact]",
            "handler": "\\Onion\\Tool\\Publish\\Command",
            "summary": "Build the current package",
            "parameters": [
                {
                    "name": "--auth",
                    "type": "string",
                    "required": false,
                    "description": "Authentication method to use",
                    "default": "password"
                },
                {
                    "name": "--secret",
                    "type": "string",
                    "required": false,
                    "description": "The secret to use for authentication"
                },
                {
                    "name": "--credential",
                    "type": "string",
                    "required": false,
                    "description": "The user to use for authentication"
                },
                {
                    "name": "--filename | -f",
                    "type": "string",
                    "required": true,
                    "description": "The filename with with which to publish artefact"
                },
                {
                    "name": "--draft | -d",
                    "type": "bool",
                    "required": false,
                    "description": "Indicate this build is pre-release",
                    "default": "true"
                }
            ]
        },
        {
            "definition": "link",
            "handler": "\\Onion\\Tool\\Link\\Command",
            "summary": "Perform actions on lists",
            "parameters": [
                {
                    "name": "--add | -a",
                    "type": "bool",
                    "required": false,
                    "description": "Add a new link entry"
                },
                {
                    "name": "--list | -l",
                    "type": "bool",
                    "required": false,
                    "description": "List all defined links"
                }
            ]
        },
        {
            "definition": "command",
            "handler": "Onion\\Tool\\Command\\Command",
            "summary": "Manipulate commands",
            "parameters": [
                {
                    "name": "--add | -a",
                    "type": "bool",
                    "required": false,
                    "description": "Add a command"
                },
                {
                    "name": "--delete | -d",
                    "type": "bool",
                    "required": false,
                    "description": "Delete a command"
                },
                {
                    "name": "--list | -l",
                    "type": "bool",
                    "required": false,
                    "description": "List all commands"
                }
            ]
        },
        {
            "definition": "compile",
            "handler": "\\Onion\\Tool\\Compile\\Command",
            "summary": "Compile project configurations",
            "parameters": [
                {
                    "name": "--environment | --env | -e",
                    "type": "string",
                    "required": false,
                    "description": "Environment configs to load"
                },
                {
                    "name": "--config-dir | --config | -c",
                    "type": "string",
                    "required": false,
                    "description": "The configurations directory"
                }
            ]
        },
        {
            "definition": "module [action] [module]",
            "handler": "\\Onion\\Tool\\Module\\Command",
            "summary": "Manage app modules",
            "parameters": [
                {
                    "name": "--constraint | -c",
                    "type": "string",
                    "required": false,
                    "description": "Constraint to install"
                },
                {
                    "name": "--alias | --as | -a",
                    "type": "string",
                    "required": false,
                    "description": "Alias to use when loading module from the code"
                }
            ]
        }
    ],
    "repositories": [
        {
            "name": "gh",
            "vendor": "phOnion",
            "project": "tool",
            "branch": "master"
        }
    ],
    "dependencies": []
}